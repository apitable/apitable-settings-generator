{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "outDir":"dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "declarationDir": "./types"
  },
  "include": ["lib/**/*", "tests/**/*"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}